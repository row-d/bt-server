<div class="w-full max-w-xl mt-4 border border-gray-200 bg-white rounded-lg p-4 shadow-sm">
  <h2 class="font-semibold mb-3">Controles</h2>
  <div class="grid grid-cols-1 gap-3">
    <div class="flex flex-col sm:flex-row items-stretch sm:items-center gap-3">
      <button
        @click="toggleRelay1()"
        :disabled="!connected"
        class="flex-1 px-3 py-2 rounded-md border border-gray-300 bg-white hover:bg-gray-50 disabled:opacity-50 text-center"
      >
        Relay 1: <span class="font-semibold" x-text="relay1 ? 'Cerrado' : 'Abierto'"></span>
      </button>
      <button
        @click="toggleRelay2()"
        :disabled="!connected"
        class="flex-1 px-3 py-2 rounded-md border border-gray-300 bg-white hover:bg-gray-50 disabled:opacity-50 text-center"
      >
        Relay 2: <span class="font-semibold" x-text="relay2 ? 'Cerrado' : 'Abierto'"></span>
      </button>
    </div>

    <div class="flex flex-col sm:flex-row items-stretch sm:items-center gap-3">
      <label class="text-gray-600">Buzzer (Hz)</label>
      <input
        type="number"
        min="0"
        step="1"
        class="w-full sm:w-28 px-2 py-1 border rounded"
        x-model.number="buzzerFreq"
        :disabled="!connected"
      />
      <button
        @click="buzzerOn()"
        :disabled="!connected"
        class="w-full sm:w-auto px-3 py-2 rounded-md text-white bg-indigo-600 hover:bg-indigo-700 disabled:opacity-50"
      >
        On
      </button>
      <button
        @click="buzzerOff()"
        :disabled="!connected"
        class="w-full sm:w-auto px-3 py-2 rounded-md border border-gray-300 bg-white hover:bg-gray-50 disabled:opacity-50"
      >
        Off
      </button>
    </div>

    <div class="flex flex-col sm:flex-row items-stretch sm:items-center gap-3">
      <label class="text-gray-600">LED</label>
      <input
        type="color"
        x-model="ledColor"
        :disabled="!connected"
        class="w-16 sm:w-10 h-10 sm:h-8 p-0 border rounded"
      />
      <select
        x-model.number="ledIndex"
        :disabled="!connected"
        class="w-full sm:w-auto px-2 py-1 border rounded"
      >
        <option value="255">Todos</option>
        <option value="0">LED 0</option>
        <option value="1">LED 1</option>
        <option value="2">LED 2</option>
        <option value="3">LED 3</option>
        <option value="4">LED 4</option>
      </select>
      <button
        @click="applyLed()"
        :disabled="!connected"
        class="w-full sm:w-auto px-3 py-2 rounded-md text-white bg-indigo-600 hover:bg-indigo-700 disabled:opacity-50"
      >
        Aplicar
      </button>
    </div>
  </div>
</div>
